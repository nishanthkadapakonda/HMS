<p id="notice"><%= notice %></p>

<h1>Slots</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Hospital</th>
      <th>Date</th>
      <th>Time in</th>
      <th>Time out</th>
      <th>No of patients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.doctor.user.name %></td>
        <td><%= slot.hospital.name %></td>
        <td><%= slot.date %></td>
        <td><%= slot.time_in %></td>
        <td><%= slot.time_out %></td>
        <td><%= slot.no_of_patients %></td>
        <td><%= link_to 'Show', slot %></td>
        <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
        <td><%= link_to 'Destroy', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slot', new_slot_path %>
